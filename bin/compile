#!/usr/bin/env bash

slugcleanup="false"
if [ -d "$env_dir" ]; then
  slugcleanup=$(cat $env_dir/SLUGCLEANUP)
fi

if [ "$slugcleanup" = "true" ]; then
  echo "-----> Found a .slugcleanup"

  cd $1

  cat .slugcleanup | xargs -I {} bash -c 'echo "  * removing {} "; rm -rf {}'
  rm .slugcleanup
else
  echo "-----> Found a .slugcleanup but ignoring because SLUGCLEANUP != true"
fi
